<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartCityStudyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/main_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorSecondaryVariant">@color/main_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Auxiliary colors. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorIconNotification">@color/white</item>
        <item name="alphaIconNotification">100</item>
    </style>

    <style name="Theme.SmartCityStudyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IconNewNotifications" parent="Theme.SmartCityStudyApp">
        <item name="colorIconNotification">@color/yellow</item>
        <item name="alphaIconNotification">1</item>
    </style>

    <style name="IconNoNotifications" parent="Theme.SmartCityStudyApp">
        <item name="colorIconNotification">@color/white</item>
        <item name="alphaIconNotification">100</item>
    </style>

    <style name="Theme.SmartCityStudyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmartCityStudyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>